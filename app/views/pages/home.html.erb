  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css"
    href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
</head>

<body>

  <header class="header_section">
    <nav class="navbar navbar-expand-lg custom_nav-container">
      <a class="navbar-brand" href="index.html">
        <span>CommonShelf ðŸ“š</span>
      </a>
    </nav>
  </header>

 <section class="slider_section">
  <article class="container">
    <section class="row align-items-center">
      <header class="welcome-text">
        <h1>Welcome to CommonShelf</h1>
        <p>Your go-to platform for borrowing and managing books online.</p>
      </header>
      <figure class="img-box">
        <img src="/images/photpo.png" alt="Library">
      </figure>
      <section class="btn-box">
        <a href="<%= new_user_session_path %>" class="btn1">Log In</a>
        <a href="<%= new_user_registration_path %>" class="btn1">Sign Up</a>
      </section>
    </section>
  </article>
</section>

<!-- Curve Divider in the middle -->
<section class="curve-divider">
  <svg viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg">
    <path fill="#f8f9fa"
      d="M0,160L60,149.3C120,139,240,117,360,128C480,139,600,181,720,197.3C840,213,960,203,1080,186.7C1200,171,1320,149,1380,138.7L1440,128V320H0Z">
    </path>
  </svg>
</section>

<section class="service_section">
  <section class="service_container">
    <article class="container">
      <header class="heading_container heading_center">
        <h2>Our <span>Services</span></h2>
        <p>Explore a variety of books, borrow with ease, and enjoy seamless reading.</p>
      </header>
      <section class="row">
        <article class="box">
          <section class="icon-box">
            <i class="fas fa-book-open"></i>
          </section>
          <section class="detail-box">
            <h5>Borrow Books</h5>
            <p>Borrow books with just a few clicks and enjoy reading at your convenience.</p>
          </section>
        </article>
        <article class="box">
          <section class="icon-box">
            <i class="fas fa-undo-alt"></i>
          </section>
          <section class="detail-box">
            <h5>Return Easily</h5>
            <p>Return books hassle-free before the due date to keep our library flowing.</p>
          </section>
        </article>
        <article class="box">
          <section class="icon-box">
            <i class="fas fa-headset"></i>
          </section>
          <section class="detail-box">
            <h5>24/7 Support</h5>
            <p>Get assistance anytime with our dedicated customer support team.</p>
          </section>
        </article>
      </section>
    </article>
  </section>
</section>


</body>

</html>
